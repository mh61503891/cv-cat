<% if notice.present? %>
  <div class="alert alert-info" role="alert">
    <%= notice %>
  </div>
<% end %>
<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Publishers", publishers_path %>
    </li>
    <li class="breadcrumb-item active">
      <%= @publisher.id %>
    </li>
  </ol>
</nav>
<div class="btn-toolbar mb-3" role="toolbar">
  <div class="btn-group me-auto" role="group">
    <%= link_to publishers_path, class: %w[btn btn-light] do %>
      <i class="bi bi-arrow-left-short"></i>
      <span>Back</span>
    <% end %>
  </div>
  <div class="btn-group ms-auto" role="group">
    <%= link_to "Edit", edit_publisher_path(@publisher), class: %w[btn btn-primary] %>
  </div>
  <div class="btn-group ms-2" role="group">
    <%= link_to @publisher, method: :delete, class: %w[btn btn-danger],
        data: { confirm: "Are you sure?" } do %>
      <i class="bi bi-trash"></i>
      <span>Destroy</span>
    <% end %>
  </div>
</div>
<% @publisher.names.each do |name| %>
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">
      <%= tag.span(I18n.t(:name, locale_key: name.locale,
          scope: [:activerecord, :attributes, :publisher])) %>
    </label>
    <div class="col-sm-10">
      <span class="form-control-plaintext">
        <%= name.value %>
      </span>
    </div>
  </div>
<% end %>
<% @publisher.abbreviations.each do |name| %>
  <div class="mb-3 row">
    <label class="col-sm-2 col-form-label">
      <%= tag.span(I18n.t(:abbreviation, locale_key: name.locale,
          scope: [:activerecord, :attributes, :publisher])) %>
    </label>
    <div class="col-sm-10">
      <span class="form-control-plaintext">
        <%= name.value %>
      </span>
    </div>
  </div>
<% end %>
<div class="mb-3 row">
  <label class="col-sm-2 col-form-label">URL</label>
  <div class="col-sm-10">
    <span class="form-control-plaintext">
      <%= @publisher.link_to_url_tag %>
    </span>
  </div>
</div>
